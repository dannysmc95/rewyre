{
  "name": "rewyre",
  "version": "1.2.2",
  "description": "A fast and flexible wiring tool for developing RESTful APIs and more, using TypeScript decorators.",
  "main": "lib/index.js",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "rm -rf lib/ && node_modules/.bin/tsc",
    "build:watch": "rm -rf lib/ && node_modules/.bin/tsc --watch",
    "lint": "node_modules/.bin/eslint . --ext .ts",
    "updateChangelog": "node_modules/.bin/auto-changelog --template keepachangelog --commit-limit false --hide-credit",
    "test": "node -r ts-node/register --max_old_space_size=2048 ./test/application.ts",
    "preprepareOnly": "npm run lint && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/dannysmc95/rewyre.git"
  },
  "keywords": [
    "rewyre",
    "framework",
    "rest",
    "api",
    "express",
    "decorators",
    "typescript",
    "wireframe",
    "prototype",
    "restful",
    "websocket",
    "mongodb"
  ],
  "author": "Danny SMc <danny.smc95@gmail.com> (https://dannysmc.com/)",
  "license": "CC-BY-ND-4.0",
  "bugs": {
    "url": "https://github.com/dannysmc95/rewyre/issues"
  },
  "homepage": "https://github.com/dannysmc95/rewyre#readme",
  "dependencies": {
    "@types/mustache": "^4.0.1",
    "body-parser": "^1.19.0",
    "colors": "^1.4.0",
    "cookie-parser": "^1.4.5",
    "express": "^4.17.1",
    "express-ws": "^4.0.0",
    "moment-timezone": "^0.5.31",
    "mongodb": "^3.6.2",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.8",
    "@types/express-ws": "^3.0.0",
    "@types/mongodb": "^3.5.27",
    "@types/node": "^14.11.8",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "auto-changelog": "^2.2.1",
    "eslint": "^7.11.0",
    "mustache": "^4.0.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "engines": {
    "node": ">= 8.0.0",
    "npm": ">= 5.0.0"
  }
}
